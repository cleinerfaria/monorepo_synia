{
  "name": "monorepo-synia",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev-select.cjs",
    "run:project": "node scripts/dev-select.cjs",
    "dev:aurea": "npm run dev -w aurea",
    "dev:wl": "npm run dev -w white_label",
    "dev:white-label": "npm run dev:wl",
    "db:reset:aurea": "npm run db:reset -w @synia/db-aurea",
    "db:migrate:aurea": "npm run db:migrate -w @synia/db-aurea",
    "db:seed:dev:aurea": "npm run db:seed:dev -w @synia/db-aurea",
    "db:prepare:test:aurea": "npm run db:prepare:test -w @synia/db-aurea",
    "db:reset:white-label": "npm run db:reset -w @synia/db-white-label",
    "db:migrate:white-label": "npm run db:migrate -w @synia/db-white-label",
    "migrate": "node scripts/migrate-select.cjs",
    "db:seed:dev:white-label": "npm run db:seed:dev -w @synia/db-white-label",
    "db:prepare:test:white-label": "npm run db:prepare:test -w @synia/db-white-label",
    "setup:aurea": "node scripts/setup-aurea.cjs",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:status": "npx supabase status",
    "precommit:check": "node scripts/dev-select.cjs precommit:check",
    "precommit:check:aurea": "npm run precommit:check -w aurea",
    "precommit:check:wl": "npm run precommit:check -w white_label",
    "precommit:check:white-label": "npm run precommit:check:wl",
    "build:project": "node scripts/dev-select.cjs build",
    "lint:project": "node scripts/dev-select.cjs lint",
    "typecheck:project": "node scripts/dev-select.cjs typecheck",
    "test:project": "node scripts/dev-select.cjs test",
    "test:run:project": "node scripts/dev-select.cjs test:run",
    "test:e2e": "node scripts/dev-select.cjs test:e2e",
    "test:e2e:ui": "node scripts/dev-select.cjs test:e2e:ui",
    "commitmsg:check": "node scripts/validate-commit-msg.cjs",
    "hooks:install": "node scripts/setup-git-hooks.cjs",
    "prepare": "npm run hooks:install",
    "test:migrations": "node scripts/test-migrations.cjs",
    "build": "npm run build --workspaces",
    "test": "npm run test:run --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "dotenv": "^17.3.1",
    "supabase": "^2.76.10"
  }
}
